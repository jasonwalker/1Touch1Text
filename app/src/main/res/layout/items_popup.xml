<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_line">
    <onemessage.jmw.com.onemessage.SmallButton
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:minHeight="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_insert_button"
        android:layout_alignParentEnd="true"
        android:textColor="@color/text"/>

    <ListView
        android:id="@+id/insert_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insertTitle"
        android:background="@drawable/border_line"
        android:divider="@color/border"
        android:dividerHeight="1dp"
        android:textColor="#ffffff">
    </ListView>

    <TextView
        android:id="@+id/insertTitle"
        android:text="Insert Template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:paddingBottom="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/cancel_insert_button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>